{
    "accounts": [
        { "name": "A", "eth_balance": 3 },
        { "name": "B", "eth_balance": 1 },
        { "name": "MemSender", "eth_balance": 10 },
        { "name": "storage", "eth_balance": 3 },
        { "name": "receiver" }
    ],
    "tests": [
        {
            "enabled": true,
            "type": "transaction",
            "id": "example_1",
            "description": "Simple Transfer",
            "transaction": {
                "from": "A",
                "to": "receiver",
                "eth_amount": 0.25
            }
        },
        {
            "enabled": true,
            "type": "transaction",
            "id": "example_1n",
            "description": "3 Simple Transfers",
            "transaction": {
                "from": "A",
                "to": "receiver",
                "eth_amount": 0.15,
                "count": 3
            }
        },
        {
            "type": "check_nonce",
            "id": "A_nonce1",
            "description": "Nonce after 1 tx",
            "check": {
                "account": "A",
                "nonce": 4
            }
        },
        {
            "type": "transaction",
            "id": "example_2",
            "description": "Creating a Smart Contract and saving the address",
            "transaction": {
                "from": "A",
                "gas": 60000,
                "data": "0x00",
                "save_as": "sc1"
            }
        },
        {
            "type": "check_nonce",
            "id": "A_nonce2",
            "description": "Nonce after 2 tx",
            "check": {
                "account": "A",
                "nonce": 5
            }
        },
        {
            "type": "transaction",
            "id": "example_3",
            "description": "Calling a Smart Contract created on the previous step",
            "transaction": {
                "from": "B",
                "to": "sc1",
                "gas": 60000,
                "data": "0x01"
            }
        },
        {
            "enabled": true,
            "description": "Dangerous bytecode. Disabled, it does not confirm",
            "type": "transaction",
            "id": "jh_killer_1",
            "transaction": {
                "from": "A",
                "gas": 60000,
                "data": "650fffffffffff6000f300"
            }
        },
        {
            "enabled": true,
            "description": "Inifinite loop, never gets confirmed. (JUMPDEST, CALLVALUE, JUMP) +5b3656 +5b4456",
            "type": "transaction",
            "id": "infinite_loop_1",
            "transaction": {
                "from": "A",
                "gas": 2999999,
                "data": "5b3456"
            }
        },
        {
            "type": "transaction",
            "id": "jh_killer_2",
            "description": "Returning 0xfe60016001016010601014602c51607f607ff3600c600c10607f bytes",
            "transaction": {
                "from": "A",
                "gas": 60000,
                "data": "79fe60016001016010601014602c51607f607ff3600c600c10607f6000f300"
            }
        },
        {
            "type": "transaction",
            "id": "jh_killer_3",
            "description": "Dangerous bytecode",
            "transaction": {
                "from": "A",
                "gas": 60000,
                "data": "79fe60016001016010601014602c51607f607ff3600c600c10607f6000f300"
            }
        },
        {
            "type": "transaction",
            "id": "step_counter_overflow",
            "description": "Sending a sc create with 247 keccak256()",
            "transaction": {
                "from": "A",
                "gas": 299999,
                "data": ""
            }
        },
        {
            "type": "transaction",
            "id": "fulltrace_onopcode_stop",
            "description": "(CODECOPY 0 0 (CODESIZE)) (CREATE 0 0 (CODESIZE))",
            "transaction": {
                "from": "A",
                "gas": 299999,
                "data": "3860006000393860006000f000"
            }
        },
        {
            "type": "transaction",
            "id": "fulltrace_onopcode_stop_long",
            "description": "meant to be the same than fulltrace_onopcode_stop, longer version",
            "transaction": {
                "from": "A",
                "gas": 299999,
                "data": "0x6500000001000080610000106300000018576300000000005b386000600039610000511063000000003860006000f0"
            }
        },
        {
            "type": "transaction",
            "id": "jh_kill_on_call",
            "description": "meant to be the same than fulltrace_onopcode_stop_long, longer version",
            "transaction": {
                "from": "A",
                "gas": 299999,
                "data": "630000000a6300000015600039630000000a6000F34344434041424243f27a",
                "save_as": "jh_kill_on_call"
            }
        },
        {
            "type": "transaction",
            "id": "call_jh_kill_on_call",
            "description": "call the sc created on jh_kill_on_call",
            "transaction": {
                "from": "A",
                "to": "jh_kill_on_call",
                "gas": 400000,
                "data": "0x42"
            }
        },
        {
            "type": "transaction",
            "id": "jh_oom_and_panic",
            "description": "Caused oom and panic on sequencer",
            "transaction": {
                "from": "A",
                "gas": 299999,
                "data": "6000600052650fffffffffff60006000f060005500"
            }
        },
        {
            "type": "transaction",
            "id": "max_gas",
            "description": "MSTORE to highest possible position",
            "transaction": {
                "from": "MemSender",
                "gas": 29999999,
                "data": "5F623C166052",
                "count": 100
            }
        },
        {
            "enabled": true,
            "type": "transaction",
            "id": "create_storage_sc",
            "description": "SC that writes on same storage slot different values",
            "transaction": {
                "from": "storage",
                "data": "600A600A5F39600A5fF35F545F3560F01C015F55",
                "save_as": "contract",
                "gas": 55694
            }
        },
        {
            "enabled": true,
            "type": "transaction",
            "id": "call_storage_sc",
            "description": "Call SC to write random value to storage",
            "transaction": {
                "from": "storage",
                "to": "contract",
                "gas": 50000,
                "count": 100,
                "data": "${random_byte}"
            }
        },
        {
            "enabled": true,
            "type": "transaction",
            "id": "EIP-3541",
            "description": "Should be rejected as per EIP-3541",
            "transaction": {
                "from": "A",
                "data": "60ef60005360016000f3",
                "save_as": "not_saved",
                "gas": 75000
            }
        },
        {
            "enabled": true,
            "type": "transaction",
            "id": "oom",
            "description": "Caused Sequencer OOM panic on RC1",
            "transaction": {
                "from": "A",
                "data": "0x60646064526317179149656234608c608c608c608cf500",
                "save_as": "not_saved",
                "gas": 29999999
            }
        }
    ]
}
